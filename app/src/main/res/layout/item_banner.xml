<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/itemBannerImage"
            android:layout_width="250dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Sumyra" />

         <TextView
            android:id="@+id/itemBannerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/itemBannerImage"
            app:layout_constraintStart_toStartOf="@+id/itemBannerImage"
            app:layout_constraintTop_toBottomOf="@+id/itemBannerImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>
