<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemBannerImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:contentDescription="Sumyra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemBannerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_24sdp"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/_28sdp"
        app:layout_constraintEnd_toEndOf="@+id/itemBannerImage"
        app:layout_constraintStart_toStartOf="@+id/itemBannerImage"
        app:layout_constraintTop_toBottomOf="@+id/itemBannerImage" />

    <Button
        android:id="@+id/itemBtn"
        style="@style/BtnStyle"
        android:layout_marginTop="44dp"
        android:text="Skip"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemBannerText" />

</androidx.constraintlayout.widget.ConstraintLayout>
